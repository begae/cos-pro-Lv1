
func solution(arr: Array<Int>) -> Int {
    var count: Int = 0
    var counts: Array<Int> = [0]
    for i in 0...arr.count-2 {
        if arr[i] < arr[i+1] {
            count += 1
        } else {
            count += 1
            counts.append(count)
            count = 0
        }
    }
    return counts.max()!
}

solution(arr: [3, 1, 2, 4, 5, 1, 2, 2, 3, 4]) // 4

